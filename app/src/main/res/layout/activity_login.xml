<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/background"
    android:id="@+id/login">

    <RelativeLayout
        style="@style/layout"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tagline3"
            style="@style/tagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/back"
            android:text="@string/tagline3" />

        <TextView
            android:id="@+id/tagline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tagline3"
            android:layout_marginTop="-5dp"
            android:width="165dp"
            android:fontFamily="@font/josefinsans_light"
            android:importantForAccessibility="no"
            android:paddingTop="5dp"
            android:text="Bagaimana kabarmu hari ini?"
            android:textColor="@color/mainfontcolor"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tagline4"
            android:layout_marginTop="52dp"
            android:fontFamily="@font/josefinsans_regular"
            android:text="Email"
            android:textColor="@color/mainfontcolor"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/colinemail"
            style="@style/columninput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:paddingStart="5dp"
            android:inputType="text"
            android:hint=" @gmail.com/@mail.com"
            tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/colinemail"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/josefinsans_regular"
            android:text="Password"
            android:textColor="@color/mainfontcolor"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/colinpassword"
            style="@style/columninput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:layout_below="@id/password"
            android:inputType="text"
            android:hint=" * * * * * * * *"
            tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />



        <Button
            android:id="@+id/buttonlogin"
            style="@style/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/colinpassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="230dp"
            android:background="@drawable/button_shape"
            android:text="LOGIN" />

        <TextView
            android:id="@+id/askdaftar"
            style="@style/asklogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonlogin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="@string/askdaftar"
            tools:ignore="TextSizeCheck" />


    </RelativeLayout>

</RelativeLayout>